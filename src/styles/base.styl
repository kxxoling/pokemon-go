@import './styles/palette'
$pmg-h-padding = 40px
$pmg-v-padding = 4px
.pmg-button.button
  display inline-block
  background linear-gradient(to right, $green, $blue);
  border none
  color white
  padding-left $pmg-h-padding
  padding-right $pmg-h-padding
  padding-top $pmg-v-padding
  padding-bottom $pmg-v-padding
  line-height 25px
  border-radius 25px

ul {
  padding: 0;
  margin: 0;
}
